<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/nav.ejs") %>

<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a href="/admin/users/create" class="btn btn-success">Criar novo usuario</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <th><%= user.id %></th>
                    <th><%= user.email %></th>

                    <th>
                        <form style="display: inline;">
                            <a href="/admin/users/edit/<%= user.id %>" class="btn btn-warning">Editar</a>
                        </form>
                        
                        <form action="/users/delete" method="post" style="display: inline;" onsubmit="confirmDelete(event, this)">
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>

                </tr>   
            <% }); %>
            
        </tbody>
    </table>
</div>

<script src="../../../js/index.js"></script>

<%- include ("../../partials/footer.ejs") %>