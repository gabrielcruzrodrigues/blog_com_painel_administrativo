<%- include ("partials/header.ejs") %>
<%- include ("partials/homeNav.ejs") %>

<div class="container">
    <br>
    <div class="text-bg-secondary p-3">
        <h1 class="display-4" style="text-align: center;"><%= category.title %></h1>
        <p class="lead" style="text-align: center;">Seja bem-vindo!</p>
    </div>

    <% articles.forEach((article) => { %>
        <br>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>   
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
            </div>
        </div>
    <% }); %>
</div>

<%- include ("partials/footer.ejs") %>
