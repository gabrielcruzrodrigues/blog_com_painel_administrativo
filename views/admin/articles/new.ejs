<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/nav.ejs") %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2 class="title-center">Novo artigo</h2>
        </div>
        <div class="card-body">
           
            <form method="post" action="/categories/save">
                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo"><br>
                <textarea placeholder="Escreva o artigo aqui!" name="body" class="form-control" id="article"></textarea><br>
                <label>Categoria:</label>
                <select name="category" class="form-control">
                    <% categories.forEach((category) => { %> 
                        <option value="<%= category.id %>">
                            <%= category.title %>
                        </option>
                    <% }) %>
                </select><br>
                <button class="btn btn-primary">Cadastrar</button>
            </form>

        </div>
    </div>
</div>

<%- include ("../../partials/footer.ejs") %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        height: 200
    })
</script>