<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/homeNav.ejs") %>

<div class="container">
    <br>
    <% results.articles.rows.forEach((article) => { %>
        <br>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>   
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
            </div>
        </div>
    <% }); %>

    <br>
    <div class="row">
        <div class="col col-12">
            <% if(results.page > 1) {%>
                <a style="float: left" href="/articles/page/<%= results.page -1 %>"><<< Prev</a>
            <% } else { %>
                <a style="float: left" href="/"><<< Prev</a> 
            <% }; %>

            <% if(results.next) { %>
                <a style="float: right" href="/articles/page/<%= results.page + 1 %>">Next >>></a>
            <% }; %>
        </div>
    </div>
    <hr>  
</div>

<%- include ("../../partials/footer.ejs") %>
