<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/nav.ejs") %>

<div class="container">
    <br>
    <div class="card">
        <div class="card-header">
            <h2 class="title-center">Editar artigo</h2>
        </div>
        <div class="card-body">
           
            <form method="post" action="/articles/update">
                <input type="hidden" name="id" value="<%= article.id %>">
                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo" value="<%= article.title %>"><br>
                <textarea placeholder="Escreva o artigo aqui!" name="body" class="form-control" id="article"></textarea><br>
                <label>Categoria:</label>
                <select name="category" class="form-control">
                    <% categories.forEach((category) => { %> 

                        <!-- selecionar dinamicamente a categoria do dropDown de acordo com o id do artigo -->
                        <% if (category.id == article.categoryId) { %>
                            <option value="<%= category.id %>" selected><%= category.title %></option>
                        <% } else { %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% }; %>

                        
                    <% }) %>
                </select><br>
                <button class="btn btn-primary">Atualizar</button>
            </form>
        </div>
    </div>
</div>

<div id="content" style="display: none;">
    <%- article.body %>
</div>

<%- include ("../../partials/footer.ejs") %>
<script src="/tinymce/tinymce.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        plugins: 'media save table paste emoticons preview print image',
        height: 200,
        activeEditor: true,
        init_instance_callback: () => {
            tinymce.get("article").setContent($("#content").html());
        }
    })
</script>